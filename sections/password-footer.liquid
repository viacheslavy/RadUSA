{% if section.settings.show_powered_by %}
  <footer class="password-footer text-center" role="contentinfo" data-section-id="{{ section.id }}" data-section-type="password-footer">
    {% capture shopify %}
    <a href="//www.shopify.com" rel="nofollow" target="_blank" title="Create your own online store with Shopify">
      <span class="visually-hidden">Shopify</span>
      {% include 'icon-shopify-logo' %}
    </a>
    {% endcapture %}
    {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}
  </footer>
{% endif %}

{% schema %}
{
  "name": {
    "de": "Fußzeile",
    "en": "Footer",
    "es": "Pie de página",
    "fr": "Pied de page",
    "it": "Footer",
    "ja": "フッター",
    "nl": "Voettekst",
    "pt-BR": "Rodapé",
    "zh-CN": "页脚",
    "zh-TW": "頁尾"
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": {
        "de": "'Powered by Shopify' anzeigen",
        "en": "Show 'powered by Shopify'",
        "es": "Mostrar 'Tecnología Shopify'",
        "fr": "Afficher « Propulsé par Shopify »",
        "it": "Mostra 'Powered by Shopify'",
        "ja": "「Powered by Shopify」を表示する",
        "nl": "'Mogelijk gemaakt door Shopify' weergeven",
        "pt-BR": "Exibir \"Plataforma de e-commerce: Shopify\"",
        "zh-CN": "显示“由 Shopify 提供支持”",
        "zh-TW": "顯示「由 Shopify 提供技術支援」"
      },
      "default": true
    }
  ]
}
{% endschema %}
